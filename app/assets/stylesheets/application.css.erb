.ul {
  width: 100%; 
}
li {
  font-family: 'Racing Sans One';
  font-size: 1.85em; 
}

a {
  color: white;
  font-size: 1em; 
}

a:hover {
  background-color: white;
  color: #FF7216;
}

.registration{
  float: right;
  font-size: 1.75em; 
}

.form-heading {
  color: #FF7216; 
  font-weight: bold; 
  font-size: 3em; 
  font-family: 'Racing Sans One';
  width: 30%;
  margin-left: 30%; 
}

.field {
  font-family: 'Playball'; 
  font-size: 1.85em; 
  margin-left: 85%; 
  color: white; 
}

.new_form {
  margin-top: 8%; 
  width: 40%; 
  height: 30%; 
  background-color: #007FFF; 
  border-radius: 10px; 
  padding-top: 3%;
  padding-bottom: 3%;  
  opacity: .6; 
  margin-left: 30%; 
}

input {
  width: 10em;
  margin: 0 auto; 
  color: #FF7216; 
  border-radius: 10px; 
}

form {
  width: 25%;
}

.link {
  font-family: 'Playball'; 
  font-size: 1.75em; 
  margin-left: 10%; 
}

.question {
  font-family: 'Racing Sans One';
  font-size: 1em; 
  color: #FF7216;
}


