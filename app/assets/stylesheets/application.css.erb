body { background-image: url(<%= asset_path 'deadweather.jpg' %>);
  background-attachment: fixed;
 }

div, .pure-menu {
  height: 4em; 
}

.ul {
  width: 100%; 
}
li {
  font-family: 'Racing Sans One';
  font-size: 1.85em; 
}

a {
  color: white;
}

a:hover {
  background-color: black;
  color: #FF7216;
}

.registration{
  float: right;
  font-size: 1.75em; 
}

.sticktop {
  width: 100%;
  margin: 0 auto; 
  height: 5em; 
  background-color: white; 
  opacity: .5; 
  position: fixed; 
}

.landing-title {
  zoom: 1;
  margin-left: 15%; 
  font-family: 'Faster One'; 
  font-size: 5em; 
  color: #FF7216;
}

.pure-u-1-3 {
  display: inline-block;
  color: #FF7216;
  background-color: white; 
  font-family: 'Racing Sans One'; 
  line-height: 1.5em; 
  font-size: 3em; 
  clear: both;
}

